{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "strictNullChecks": false,
    "allowJs":true,
    "project":"src",
    "baseUrl":"src",
    "rootDir": "src",
    "outDir": "dist",
    "allowUnreachableCode":true,
    "allowUnusedLabels":true,
    "experimentalDecorators":true,
    "locale":"zh-cn",
    "lib": [
      "dom", "es5"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}